<div id="chart4">
    
</div>

<script type="text/javascript">
    // var base = 'http://localhost:3000/api/fuel-emissions/';
    // var endpoint = '<%=emission.country%>';
    // var url = base + endpoint;
    var url = '/api/fuel-emissions/<%= emission.country %>';
    jQuery.getJSON(url).done(processResult)

    let chartFour = echarts.init(document.getElementById('chart4'));


    function processResult(data) {
    console.log(data);

    let chartData = data.map( d => {
      return {
        year: new Date(d.year).getFullYear(),  // converts "1987-04-23" â†’ 1987
        coal: Number(d.coal),
        oil: Number(d.oil),
        gas: Number(d.gas)
      };
    })

    let optionChartFour = {
      dataset: {
        dimensions: ['year', 'coal', 'oil', 'gas'],
        source: chartData
      },
      tooltip: {
        trigger: 'axis',
        valueFormatter: (value) => value.toFixed(1) + ' million tonnes',
        axisPointer: {
            type: 'cross',
            label: {
            backgroundColor: '#6a7985'
            }
        },
        textStyle: {
            fontWeight: 300,
            color: '#212121'
          }
      },
      legend: {
        data: ['Coal', 'Oil', 'Gas']
      },
      xAxis: {
        type: 'category',
      },
      yAxis: {
        type: 'value'
      },
      series: [
        {
          type: 'line',
          stack: 'Total',
          areaStyle: {},
          encode: {
            x: 'year',
            y: 'coal'
          }
        },
        {
          type: 'line',
          stack: 'Total',
          areaStyle: {},
          encode: {
            x: 'year',
            y: 'oil'
          }
        },
        {
          type: 'line',
          stack: 'Total',
          areaStyle: {},
          encode: {
            x: 'year',
            y: 'gas'
          }
        }
      ]
    };

    chartFour.setOption(optionChartFour);

    // Responsive resizing
        window.addEventListener('resize', () => chartFour.resize());
    }

    window.addEventListener('load', () => chartFour.resize());


</script>